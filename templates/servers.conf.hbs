server {
    listen 80;
    listen [::]:80;
    server_name {{domain}} {{#if wwwSubdomain}}www.{{domain}}{{/if}};

    location /.well-known/acme-challenge/ {
        root /var/www/certbot/{{domain}};
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 9500 ssl;
    listen 443 ssl;
    listen [::]:443 ssl;

    #http2 on; # enables http/2

    server_name {{domain}} {{#if wwwSubdomain}}www.{{domain}}{{/if}};

    include /etc/nginx/ssl/{{domain}}.conf;

    # error code 497 is created specially for this use case [redirect on the same port from http to https]
    error_page 497 301 =307 https://$host:$server_port$request_uri;

    ssl_dhparam /etc/nginx/ssl/ssl-dhparams.pem;

    include /etc/nginx/conf.d/includes/options-ssl-nginx.conf;

    include /etc/nginx/conf.d/includes/hsts.conf;

    {{#if dnsResolver}}
    resolver {{dnsResolver}};
    {{/if}}

{{#*inline "staticContent"}}
location / {
    root /var/www/html/{{domain}};
    index index.html index.htm;
}
{{/inline}}

{{#*inline "reverseProxy"}}
location / {
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    {{#if dnsResolver}}
    # Let Nginx start if upstream host is unreachable
    set $upstream {{upstream}};
    proxy_pass http://$upstream;
    {{else}}
    proxy_pass http://{{upstream}};
    {{/if}}

    {{#if websockets}}
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
    # proxy_read_timeout 300;
    {{/if}}
}
{{/inline}}

    {{> (lookup . 'requestHandler') }}
}
